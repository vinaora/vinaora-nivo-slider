				<field name="slices" type="integer" default="0" first="0" last="50" step="1" label="MOD_VT_NIVO_SLIDER_FIELD_SLICES" description="MOD_VT_NIVO_SLIDER_FIELD_SLICES_DESC" />
				<field name="boxCols" type="integer" default="0" first="0" last="50" step="1" label="MOD_VT_NIVO_SLIDER_FIELD_BOXCOLS" description="MOD_VT_NIVO_SLIDER_FIELD_BOXCOLS_DESC" />
				<field name="boxRows" type="integer" default="0" first="0" last="50" step="1" label="MOD_VT_NIVO_SLIDER_FIELD_BOXROWS" description="MOD_VT_NIVO_SLIDER_FIELD_BOXROWS_DESC" />
