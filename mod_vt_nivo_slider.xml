				<field name="item_description" type="textarea" rows="5" cols="30" default="" label="MOD_VT_NIVO_SLIDER_FIELD_ITEM_DESCRIPTION" description="MOD_VT_NIVO_SLIDER_FIELD_ITEM_DESCRIPTION_DESC" />
