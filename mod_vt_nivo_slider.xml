					<option value="_parent">MOD_VT_NIVO_SLIDER_OPTION_LINK_TARGET_PARENT</option>
					<option value="_top">MOD_VT_NIVO_SLIDER_OPTION_LINK_TARGET_TOP</option>
				</field>
				<field type="spacer" name="@ijfnrhaemx" hr="true" />
