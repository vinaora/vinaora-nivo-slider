				<field name="slide_bdcolor" type="colorpicker" default="#ffffff" label="MOD_VT_NIVO_SLIDER_FIELD_SLIDE_BORDERCOLOR" description="MOD_VT_NIVO_SLIDER_FIELD_SLIDE_BORDERCOLOR_DESC" />
				<field name="slide_bdwidth" type="text" default="10" label="MOD_VT_NIVO_SLIDER_FIELD_SLIDE_BORDERWIDTH" description="MOD_VT_NIVO_SLIDER_FIELD_SLIDE_BORDERWIDTH_DESC" />
