					<option value="sliceDownLeft">MOD_VT_NIVO_SLIDER_OPTION_EFFECT_SLICEDOWNLEFT</option>
					<option value="sliceUp">MOD_VT_NIVO_SLIDER_OPTION_EFFECT_SLICEUP</option>
